<% @user ||= current_user %>
<div class="stats">
  <%= link_to following_user_path(@user) do %>
    <%= content_tag :strong, @user.followed_users.count, id: 'following', class: 'stat' %>
    following
  <% end %>
  <%= link_to followers_user_path(@user) do %>
    <%= content_tag(:strong, @user.followers.count, id: 'followers', class: 'stat') %>
    followers
  <% end %>
</div>
